mixin novelties-block(data)
	.container
		.novelties-block
			h2.section-title
				span новинки
			.row
				mixin item(i, t, pr, pro)
					.col-sm-6.col-lg-3
						+b.catalog-item
							+e.img-wrap(href="#")
								img.res-i(src=`assets/images/catalog-${i}.jpg`, alt="")
							+e.labels
								+e.label.warning-bg Хит продаж
								+e.label.black-bg -10%
								+e.label.primary-bg Новинка
							.row
								.col.d-flex
									+e.link(href="#")
										+icon('heart')
									+e.link(href="#")
										+icon('compare')
								.col-auto
									block
							+e.title
								a(href="#")= t
							.row
								+e.price.strong.col-auto= pr
								if pro
									+e.price--old.col-auto= pro
							.row
								.col-auto
									.card-action__bottom
										button.buyFast.Btn-Flamenco1 купить в 1 клик
										button.basketBtn
											i.icon-1-1_basket
				+item('9','Душевая кабина GR-227 L/R','22 147 ₽')
					+e.SPAN.presence.text-warning В наличии
				+item('10','Раковина GR-3017','65 345 ₽','22 345 ₽')
					+e.SPAN.presence.text-warning В наличии
				+item('11','Унитаз GR-B4455','85 548 ₽')
					+e.SPAN.presence Нет в наличии 
				+item('9','Раковина GR-3017','24 684 ₽')
					+e.SPAN.presence.text-warning В наличии